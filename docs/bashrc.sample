# Play login sound
if command -v paplay >/dev/null; then
  paplay ~/.local/share/sounds/sgos/login.ogg &
elif command -v aplay >/dev/null; then
  aplay ~/.local/share/sounds/sgos/login.ogg &
fi

# Steins;Gate log system
mkdir -p ~/SteinsGateLogs
sg-logpush() {
  echo "[$(date '+%Y-%m-%d %H:%M:%S')] $1: $2" >> ~/SteinsGateLogs/worldline.log
}
